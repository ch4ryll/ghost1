{{!< default}}

<main class="subscribe-page">
    <section class="subscribe-section">
        {{#if @member}}
            <div class="member-logged-in">
                <h1>You're already subscribed</h1>
                <p>You're currently signed in as {{@member.email}}</p>
                <div class="member-actions">
                    <a href="/" class="button">Back to homepage</a>
                    <a href="/account/" class="button secondary">Account settings</a>
                </div>
            </div>
        {{else}}
            <div class="subscribe-form">
                <h1>Subscribe to {{@site.title}}</h1>
                <p>Get the latest posts delivered right to your inbox</p>
                
                <form data-members-form="subscribe" class="subscription-form">
                    <div class="form-group">
                        <label for="subscribe-name">Your name</label>
                        <input 
                            data-members-name
                            type="text"
                            id="subscribe-name"
                            placeholder="Jane Doe"
                            required
                        />
                    </div>
                    
                    <div class="form-group">
                        <label for="subscribe-email">Your email</label>
                        <input 
                            data-members-email
                            type="email"
                            id="subscribe-email"
                            placeholder="your@email.com"
                            required
                        />
                    </div>
                    
                    <button type="submit" class="button primary">
                        <span class="button-text">Subscribe</span>
                        <span class="button-loader">{{> "icons/loader"}}</span>
                    </button>
                    
                    <div class="message-success">
                        <strong>Great!</strong> Check your inbox and click the link to confirm your subscription.
                    </div>
                    <div class="message-error">
                        Please enter a valid email address!
                    </div>
                </form>
                
                <p class="login-link">
                    Already have an account? <a href="/signin/">Sign in</a>
                </p>
            </div>
        {{/if}}
    </section>
    
    {{#unless @member}}
    <section class="benefits-section">
        <h2>Why subscribe?</h2>
        <div class="benefits-grid">
            <div class="benefit-item">
                {{> "icons/email"}}
                <h3>Stay updated</h3>
                <p>Get notified when we publish new content</p>
            </div>
            <div class="benefit-item">
                {{> "icons/lock"}}
                <h3>Exclusive access</h3>
                <p>Members-only content and newsletters</p>
            </div>
            <div class="benefit-item">
                {{> "icons/heart"}}
                <h3>Support us</h3>
                <p>Help us continue creating great content</p>
            </div>
        </div>
    </section>
    {{/unless}}
</main>